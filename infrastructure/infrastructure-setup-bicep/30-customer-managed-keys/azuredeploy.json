  "parameters": {
    "aiFoundryName": {
      "type": "string",
      "defaultValue": "<yourfoundry>",
      "metadata": {
        "description": "That name is the name of our application. It has to be unique. Type a name followed by your resource group name. (<name>-<resourceGroupName>)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": "<your-key-vault>",
      "metadata": {
        "description": "Name of the Azure Key Vault target"
      }
    },
    "keyName": {
      "type": "string",
      "defaultValue": "<your-key>",
      "metadata": {
        "description": "Name of the Azure Key Vault key"
      }
    },
    "keyVersion": {
      "type": "string",
      "defaultValue": "<your-key-version>",
      "metadata": {
        "description": "Version of the Azure Key Vault key"
      }
    }
  },
  "variables": {
    "keyVaultUri": "[format('https://{0}.vault.azure.net/', parameters('keyVaultName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2025-06-01",
      "name": "[parameters('aiFoundryName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "kind": "AIServices",
      "sku": {
        "name": "S0"
      },
      "properties": {
        "publicNetworkAccess": "Enabled",
        "allowProjectManagement": true,
        "customSubDomainName": "[parameters('aiFoundryName')]",
        "disableLocalAuth": false
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/projects",
      "apiVersion": "2025-06-01",
      "name": "[format('{0}/{1}', parameters('aiFoundryName'), 'first-project')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "location": "[parameters('location')]",
      "properties": {
        "displayName": "project",
        "description": "My first project"
      },
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', parameters('aiFoundryName'))]"
      ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "updateEncryption",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "aiFoundryName": {
            "value": "[parameters('aiFoundryName')]"
          },
          "aiFoundryPrincipal": {
            "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', parameters('aiFoundryName')), '2025-06-01', 'full').identity.principalId]"
          },
          "keyVaultName": {
            "value": "[parameters('keyVaultName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "keyVaultUri": {
            "value": "[variables('keyVaultUri')]"
          },
          "keyName": {
            "value": "[parameters('keyName')]"
          },
          "keyVersion": {
            "value": "[parameters('keyVersion')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.39.26.7824",
              "templateHash": "10984074837058238866"
            }
          },
          "parameters": {
            "aiFoundryName": {
              "type": "string"
            },
            "aiFoundryPrincipal": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "keyVaultName": {
              "type": "string"
            },
            "keyVaultUri": {
              "type": "string"
            },
            "keyName": {
              "type": "string"
            },
            "keyVersion": {
              "type": "string"
            },
            "keyVaultPermissions": {
              "type": "object",
              "defaultValue": {
                "keys": [
                  "get",
                  "wrapKey",
                  "unwrapKey",
                  "sign",
                  "verify",
                  "encrypt",
                  "decrypt",
                  "wrapKey",
                  "unwrapKey"
                ],
                "secrets": [
                  "get",
                  "list"
                ]
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.KeyVault/vaults/accessPolicies",
              "apiVersion": "2022-07-01",
              "name": "[format('{0}/{1}', parameters('keyVaultName'), 'add')]",
              "properties": {
                "accessPolicies": [
                  {
                    "objectId": "[parameters('aiFoundryPrincipal')]",
                    "tenantId": "[subscription().tenantId]",
                    "permissions": "[parameters('keyVaultPermissions')]"
                  }
                ]
              }
            },
            {
              "type": "Microsoft.CognitiveServices/accounts",
              "apiVersion": "2025-06-01",

{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "languageVersion": "2.0",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "8973714472630128314"
    }
  },
  "parameters": {
    "aiFoundryName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure AI Foundry account"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the resource"
      }
    },
    "userOwnedStorageResourceId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Azure storage resource ID (leave empty to create a new storage account)"
      }
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "[if(not(equals(parameters('userOwnedStorageResourceId'), '')), last(split(parameters('userOwnedStorageResourceId'), '/')), format('st{0}aaviles', uniqueString(subscription().subscriptionId, resourceGroup().name)))]",
      "metadata": {
        "description": "Name of the Storage Account derived from the resource ID or provided for new account"
      }
    },
    "storageResourceGroupName": {
      "type": "string",
      "defaultValue": "[if(not(equals(parameters('userOwnedStorageResourceId'), '')), split(parameters('userOwnedStorageResourceId'), '/')[4], resourceGroup().name)]",
      "metadata": {
        "description": "Resource group name of the Storage Account derived from the resource ID or same as AI Foundry for new accounts"
      }
    }
  },
  "variables": {
    "targetStorageSubscriptionId": "[if(not(equals(parameters('userOwnedStorageResourceId'), '')), split(parameters('userOwnedStorageResourceId'), '/')[2], subscription().subscriptionId)]",
    "useExistingStorageAccount": "[not(equals(parameters('userOwnedStorageResourceId'), ''))]"
  },
  "resources": {
    "storageAccount": {
      "condition": "[and(not(variables('useExistingStorageAccount')), equals(variables('targetStorageSubscriptionId'), subscription().subscriptionId))]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2025-01-01",
      "name": "[parameters('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_RAGRS"
      },
      "kind": "StorageV2",
      "properties": {
        "allowBlobPublicAccess": false,
        "allowSharedKeyAccess": true,
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "allowCrossTenantReplication": false,
        "defaultToOAuthAuthentication": false
      }
    },
    "aiFoundry": {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2025-07-01-preview",
      "name": "[parameters('aiFoundryName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "S0"
      },
      "kind": "AIServices",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "allowProjectManagement": true,
        "publicNetworkAccess": "Enabled",
        "disableLocalAuth": false,
        "customSubDomainName": "[toLower(replace(parameters('aiFoundryName'), '_', '-'))]",
        "userOwnedStorage": [
          {
            "resourceId": "[if(variables('useExistingStorageAccount'), parameters('userOwnedStorageResourceId'), format('/subscriptions/{0}/resourceGroups/{1}/providers/Microsoft.Storage/storageAccounts/{2}', variables('targetStorageSubscriptionId'), resourceGroup().name, parameters('storageAccountName')))]"
          }
        ]
      }
    },
    "storageAccountModule": {
      "condition": "[and(not(variables('useExistingStorageAccount')), not(equals(variables('targetStorageSubscriptionId'), subscription().subscriptionId)))]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "crossSubStorageAccount",
      "subscriptionId": "[variables('targetStorageSubscriptionId')]",
      "resourceGroup": "[resourceGroup().name]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.39.26.7824",
              "templateHash": "18314810010072363735"
            }
          },
          "parameters": {
            "storageAccountName": {
              "type": "string",
              "metadata": {
                "description": "Name of the Storage Account"
              }
            },
            "location": {
              "type": "string",
              "metadata": {
                "description": "Location for the storage account"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.Storage/storageAccounts",
              "apiVersion": "2025-01-01",
              "name": "[parameters('storageAccountName')]",
              "location": "[parameters('location')]",
              "sku": {
                "name": "Standard_RAGRS"
              },
              "kind": "StorageV2",
              "properties": {
                "allowBlobPublicAccess": false,
                "allowSharedKeyAccess": true,
                "minimumTlsVersion": "TLS1_2",
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                  "services": {
                    "blob": {
                      "enabled": true
                    },
                    "file": {
                      "enabled": true
                    }
                  },
                  "keySource": "Microsoft.Storage"
                },
                "allowCrossTenantReplication": false,
                "defaultToOAuthAuthentication": false
              }
            }
          ],
          "outputs": {
            "storageAccountId": {
              "type": "string",
              "metadata": {
                "description": "Resource ID of the created storage account"
              },
              "value": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            },
            "storageAccountName": {
              "type": "string",
              "metadata": {
                "description": "Name of the created storage account"
              },
              "value": "[parameters('storageAccountName')]"
            }
          }
        }
      }
    },
    "roleAssignmentModule": {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "storageRoleAssignment",
      "subscriptionId": "[variables('targetStorageSubscriptionId')]",
      "resourceGroup": "[parameters('storageResourceGroupName')]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "principalId": {
            "value": "[reference('aiFoundry', '2025-07-01-preview', 'full').identity.principalId]"
          },
          "aiFoundryResourceId": {
            "value": "[resourceId('Microsoft.CognitiveServices/accounts', parameters('aiFoundryName'))]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.39.26.7824",
              "templateHash": "1673777851865760944"
            }
          },
          "parameters": {
            "storageAccountName": {
              "type": "string",
              "metadata": {
                "description": "Name of the Storage Account"
              }
            },
            "principalId": {
              "type": "string",
              "metadata": {
                "description": "Principal ID of the AI Foundry managed identity"
              }
            },
            "aiFoundryResourceId": {
              "type": "string",
              "metadata": {
                "description": "AI Foundry resource ID for generating unique role assignment name"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.Authorization/roleAssignments",
              "apiVersion": "2020-04-01-preview",
              "scope": "[format('Microsoft.Storage/storageAccounts/{0}', parameters('storageAccountName'))]",
              "name": "[guid(parameters('aiFoundryResourceId'), 'Storage Blob Data Contributor')]",
              "properties": {
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'ba92f5b4-2d11-453d-a403-e96b0029c9fe')]",
                "principalId": "[parameters('principalId')]",
                "principalType": "ServicePrincipal"
              }
            }
          ]
        }
      },
      "dependsOn": [
        "aiFoundry"
      ]
    }
  },
  "outputs": {
    "aiFoundryId": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the AI Foundry account"
      },
      "value": "[resourceId('Microsoft.CognitiveServices/accounts', parameters('aiFoundryName'))]"
    },
    "aiFoundryName": {
      "type": "string",
      "metadata": {
        "description": "The name of the AI Foundry account"
      },
      "value": "[parameters('aiFoundryName')]"
    },
    "storageAccountId": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the storage account being used"
      },
      "value": "[if(variables('useExistingStorageAccount'), parameters('userOwnedStorageResourceId'), format('/subscriptions/{0}/resourceGroups/{1}/providers/Microsoft.Storage/storageAccounts/{2}', variables('targetStorageSubscriptionId'), resourceGroup().name, parameters('storageAccountName')))]"
    },
    "aiFoundryPrincipalId": {
      "type": "string",
      "metadata": {
        "description": "The managed identity principal ID of the AI Foundry account"
      },
      "value": "[reference('aiFoundry', '2025-07-01-preview', 'full').identity.principalId]"
    },
    "storageSubscriptionId": {
      "type": "string",
      "metadata": {
        "description": "The subscription ID where the storage account is located"
      },
      "value": "[variables('targetStorageSubscriptionId')]"
    },
    "roleAssignmentStatus": {
      "type": "string",
      "metadata": {
        "description": "Status of role assignment"
      },
      "value": "Storage Blob Data Contributor role assigned automatically via module"
    }
  }
}